<Window x:Class="Practice.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas>
            <Path Stroke="Black" StrokeThickness="1">
                <Path.Data>
                    <PathGeometry>
                        <PathGeometry.Figures>
                            <PathFigure StartPoint="125,65">
                                <LineSegment Point="75,100"/>
                            </PathFigure>
                            <PathFigure StartPoint="125,65">
                                <LineSegment Point="175,100"/>
                            </PathFigure>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
            </Path>
            <Button Canvas.Left="104" Canvas.Top="37" Content="押せ！！" MouseDoubleClick="Button_MouseDoubleClick" MouseRightButtonDown="Button_MouseRightButtonDown" FontSize="10" Panel.ZIndex="1" HorizontalAlignment="Center" Height="29" VerticalAlignment="Top"/>
        </Canvas>
    </Grid>
</Window>
